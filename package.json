{
  "name": "flatpak-vscode",
  "displayName": "Flatpak",
  "description": "Provides Flatpak manifest integration for building & running your application",
  "keywords": [
    "flatpak",
    "flatpak-builder"
  ],
  "publisher": "bilelmoussaoui",
  "author": {
    "name": "Bilal Elmoussaoui",
    "email": "bilelmoussaoui@gnome.org"
  },
  "contributors": [
    {
      "name": "Julian Hofer",
      "email": "julianhofer@gnome.org"
    }
  ],
  "preview": true,
  "license": "MIT",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "os": [
    "linux"
  ],
  "markdown": "github",
  "icon": "flatpak.png",
  "repository": {
    "url": "https://github.com/bilelmoussaoui/flatpak-vscode.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/bilelmoussaoui/flatpak-vscode/issues"
  },
  "version": "0.0.16",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:flatpak-vscode.build-init",
    "onCommand:flatpak-vscode.run",
    "workspaceContains:**/*.{json,yaml,yml}"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flatpak-vscode.show-output-channel",
        "title": "Show the output channel",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.runtime-terminal",
        "title": "Open a Runtime Terminal",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.build-terminal",
        "title": "Open a Build Terminal",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.update-deps",
        "title": "Update dependencies",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.run",
        "title": "Run",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.rebuild",
        "title": "Rebuild the application",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.clean",
        "title": "Clean up the build directories",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.build",
        "title": "Build",
        "category": "Flatpak"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "flatpak-vscode.runtime-terminal",
          "when": "flatpakManifestFound"
        },
        {
          "command": "flatpak-vscode.build-terminal",
          "when": "flatpakManifestFound && flatpakInitialized"
        },
        {
          "command": "flatpak-vscode.clean",
          "when": "flatpakManifestFound"
        },
        {
          "command": "flatpak-vscode.update-deps",
          "when": "flatpakInitialized"
        },
        {
          "command": "flatpak-vscode.build",
          "when": "flatpakManifestFound && !flatpakApplicationBuilt"
        },
        {
          "command": "flatpak-vscode.rebuild",
          "when": "flatpakApplicationBuilt"
        },
        {
          "command": "flatpak-vscode.run",
          "when": "flatpakApplicationBuilt"
        }
      ]
    },
    "keybindings": [
      {
        "command": "flatpak-vscode.rebuild",
        "linux": "ctrl+alt+B"
      },
      {
        "command": "flatpak-vscode.run",
        "linux": "ctrl+alt+R"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "*.*.*.json",
          "*.*.*.*.json",
          "*.*.*.*.*.json",
          "!/settings.json"
        ],
        "url": "https://raw.githubusercontent.com/flatpak/flatpak-builder/master/data/flatpak-manifest.schema.json"
      }
    ],
    "yamlValidation": [
      {
        "fileMatch": [
          "*.*.*.yaml",
          "*.*.*.*.yaml",
          "*.*.*.*.*.yaml",
          "*.*.*.yml",
          "*.*.*.*.yml",
          "*.*.*.*.*.yml"
        ],
        "url": "https://raw.githubusercontent.com/flatpak/flatpak-builder/master/data/flatpak-manifest.schema.json"
      }
    ],
    "configuration": {
      "title": "flatpak-vscode",
      "properties": {
        "flatpak-vscode.extensionsIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Integrate Flatpak VSCode with other extensions like rust-analyzer. Enabling this will make the integrated extensions run their binaries inside the Flatpak sandbox instead of running on the host."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@types/js-yaml": "^3.12.5",
    "dbus-next": "^0.10.2",
    "effector": "^21.6.0",
    "js-yaml": "^3.14.0"
  }
}
