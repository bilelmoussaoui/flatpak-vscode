{
  "name": "flatpak-vscode",
  "displayName": "Flatpak",
  "description": "Provides Flatpak manifest integration for building & running your application",
  "keywords": [
    "flatpak",
    "flatpak-builder"
  ],
  "publisher": "bilelmoussaoui",
  "preview": true,
  "license": "MIT",
  "extensionKind":[
    "ui"
  ],
  "markdown": "github",
  "icon": "flatpak.png",
  "repository": {
    "url": "https://github.com/bilelmoussaoui/flatpak-vscode.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/bilelmoussaoui/flatpak-vscode/issues"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:flatpak-vscode.build-init",
    "onCommand:flatpak-vscode.run",
    "workspaceContains:**/*.{json,yaml,yml}"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flatpak-vscode.update-deps",
        "title": "Update dependencies",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.build-deps",
        "title": "Build the dependencies",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.build-app",
        "title": "Build the application",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.run",
        "title": "Run",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.rebuild",
        "title": "Rebuild the application",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.clean",
        "title": "Clean up the build directories",
        "category": "Flatpak"
      },
      {
        "command": "flatpak-vscode.build-init",
        "title": "Init the build",
        "category": "Flatpak"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "flatpak-vscode.build-init",
          "when": "!flatpakInitialized && flatpakManifestFound"
        },
        {
          "command": "flatpak-vscode.clean",
          "when": "flatpakInitialized && flatpakManifestFound"
        },
        {
          "command": "flatpak-vscode.update-deps",
          "when": "flatpakInitialized && flatpakManifestFound"
        },
        {
          "command": "flatpak-vscode.build-deps",
          "when": "!flatpakDependenciesBuilt && flatpakInitialized && flatpakManifestFound"
        },
        {
          "command": "flatpak-vscode.build-app",
          "when": "!flatpakApplicationBuilt && flatpakDependenciesBuilt && flatpakInitialized && flatpakManifestFound"
        },
        {
          "command": "flatpak-vscode.run",
          "when": "flatpakDependenciesBuilt && flatpakApplicationBuilt"
        },
        {
          "command": "flatpak-vscode.rebuild",
          "when": "flatpakDependenciesBuilt && flatpakApplicationBuilt"
        }
      ]
    },
    "keybindings": [
      {
        "command": "flatpak-vscode.rebuild",
        "linux": "ctrl+alt+B"
      },
      {
        "command": "flatpak-vscode.run",
        "linux": "ctrl+alt+R"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@types/js-yaml": "^3.12.5",
    "effector": "^21.6.0",
    "js-yaml": "^3.14.0"
  }
}
